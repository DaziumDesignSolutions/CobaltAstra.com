extends layout

block title
  | Contact Us | 
  = locals.name

block content
  #contact-us

    #contact-us-banner.content-area.hidden-xs!= contents['contact-us-h1-title.md'].html

    .container.visible-xs!= contents['contact-us-h1-title.md'].html

    .container
      .content-area
        - var content = contents['contact-us-content.md']
        .padded
          != content.html

      .content-area
        .hpadded
          p
            a.btn.btn-primary(href='/request-a-consultation.html', role='button') REQUEST A CONSULTATION
          p
            a.btn.btn-primary(href='/partner-with-us.html', role='button') PARTNER WITH US
          p
            a.btn.btn-primary(href='/refer-a-new-client.html', role='button') REFER A NEW CLIENT

